<!-- Plugin Settings View for GS (Game Scrobbler) Plugin -->
<UserControl x:Class="GsPlugin.GsPluginSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GsPlugin"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Styles for consistent UI -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
        </Style>

        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="20">

        <!-- Installation ID Section -->
        <TextBlock Text="Your Installation ID" Style="{StaticResource SectionHeaderStyle}"/>
        <TextBlock x:Name="IDTextBlock"
                   Foreground="White"
                   Background="#FF464141"
                   Height="25"
                   FontSize="14"
                   Margin="0,5,0,0"
                   Padding="5"
                   Cursor="Hand"
                   ToolTip="Click to copy ID to clipboard"
                   MouseLeftButtonUp="TextBlock_MouseLeftButtonUp"/>

        <!-- Theme Selection Section -->
        <TextBlock Text="Theme Selection" Style="{StaticResource SectionHeaderStyle}"/>
        <ComboBox x:Name="ThemeComboBox"
                  Width="150"
                  HorizontalAlignment="Left"
                  Margin="0,5,0,0"
                  ItemsSource="{Binding AvailableThemes}"
                  SelectedItem="{Binding Settings.Theme, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Account Linking Section -->
        <TextBlock Text="Account Linking" Style="{StaticResource SectionHeaderStyle}"/>

        <!-- Hint Text -->
        <TextBlock FontSize="12"
                   FontStyle="Italic"
                   Margin="0,0,0,10"
                   TextWrapping="Wrap">
            <Run Text="Tip: To own and persist your GS data, link your plugin installation to your GS account via "
                 Foreground="LightBlue"/>
            <Hyperlink NavigateUri="https://gamescrobbler.com?utm_source=playnite_plugin&amp;utm_medium=settings_page&amp;utm_campaign=account_linking&amp;utm_content=hint_text"
                       RequestNavigate="Hyperlink_RequestNavigate"
                       Foreground="CornflowerBlue">
                <Run Text="gamescrobbler.com"/>
            </Hyperlink>
        </TextBlock>

        <!-- Connection Status -->
        <TextBlock x:Name="ConnectionStatusTextBlock"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="0,5,0,10"/>

        <!-- Open website to initiate linking -->
        <Button x:Name="OpenWebsiteToLinkButton"
                Content="Link Account on Website"
                HorizontalAlignment="Left"
                Margin="0,0,0,8"
                Padding="10,3"
                MinWidth="160"
                Click="OpenWebsiteToLink_Click"
                ToolTip="Opens gamescrobbler.com in your browser to link your account automatically"/>

        <TextBlock x:Name="ManualTokenSeparator"
                   FontSize="11"
                   Foreground="Gray"
                   Margin="0,0,0,5"
                   Text="— or enter your token manually —"/>

        <!-- Linking Controls -->
        <Grid x:Name="LinkingControlsGrid" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     x:Name="TokenTextBox"
                     Text="{Binding Settings.LinkToken, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,10,0"
                     Padding="5"
                     Height="25"
                     VerticalContentAlignment="Center"
                     ToolTip="Enter your account linking token here"/>

            <Button Grid.Column="1"
                    x:Name="LinkAccountButton"
                    Content="Link Account"
                    Click="LinkAccount_Click"
                    Padding="10,3"
                    MinWidth="100"/>
        </Grid>

        <!-- Link Status Message -->
        <TextBlock x:Name="LinkStatusTextBlock"
                   Foreground="Yellow"
                   FontSize="12"
                   Margin="0,0,0,10"
                   TextWrapping="Wrap"/>

        <!-- Experimental Features Section -->
        <TextBlock Text="Experimental Features" Style="{StaticResource SectionHeaderStyle}"/>

        <CheckBox Content="New Dashboard Experience (Beta)"
                  Margin="0,5,0,5"
                  ToolTip="Enable the new dashboard experience with enhanced features"
                  IsChecked="{Binding Settings.NewDashboardExperience, Mode=TwoWay}"/>

        <!-- Achievement sync toggle -->
        <StackPanel Margin="0,5,0,0">
            <CheckBox Content="{DynamicResource LOCGsPluginSyncAchievementsLabel}"
                      ToolTip="{DynamicResource LOCGsPluginSyncAchievementsTooltip}"
                      IsChecked="{Binding Settings.SyncAchievements, Mode=TwoWay}"/>

            <!-- Status: SuccessStory IS installed -->
            <StackPanel Orientation="Horizontal"
                        Margin="20,4,0,0"
                        Visibility="{Binding IsSuccessStoryInstalled,
                            Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="✓"
                           Foreground="#4CAF50"
                           FontSize="13"
                           Margin="0,0,6,0"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding SuccessStoryStatusText}"
                           Foreground="#4CAF50"
                           FontSize="12"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Status: SuccessStory is NOT installed -->
            <StackPanel Orientation="Horizontal"
                        Margin="20,4,0,0"
                        Visibility="{Binding IsSuccessStoryMissing,
                            Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="⚠"
                           Foreground="#FFA500"
                           FontSize="13"
                           Margin="0,0,6,0"
                           VerticalAlignment="Center"/>
                <TextBlock Foreground="#FFA500"
                           FontSize="12"
                           VerticalAlignment="Center">
                    <Run Text="{DynamicResource LOCGsPluginSuccessStoryMissingWarning}"/>
                    <Run Text=" "/>
                    <Hyperlink NavigateUri="https://playnite.link/addons.html#Success_Story_Addon"
                               RequestNavigate="Hyperlink_RequestNavigate"
                               Foreground="CornflowerBlue">
                        <Run Text="{DynamicResource LOCGsPluginSuccessStoryInstallLink}"/>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <!-- Library Sync Status -->
        <TextBlock Text="{Binding LastSyncStatus}"
                   Foreground="Gray"
                   FontSize="12"
                   Margin="0,10,0,0"/>

        <!-- Privacy Controls Section -->
        <TextBlock Text="Privacy Controls" Style="{StaticResource SectionHeaderStyle}"/>

        <CheckBox Content="Disable error reporting (Sentry)"
                  Margin="0,5,0,5"
                  ToolTip="Prevents sending crash reports and diagnostic data to improve the plugin"
                  IsChecked="{Binding Settings.DisableSentry, Mode=TwoWay}"/>

        <CheckBox x:Name="DisableScrobblingCheckBox"
                  Content="Disable game activity tracking (Scrobbling)"
                  Margin="0,5,0,5"
                  ToolTip="Prevents scrobbling of your game playing activity"
                  IsChecked="{Binding Settings.DisableScrobbling, Mode=TwoWay}"/>

        <!-- Warning message when scrobbling is disabled -->
        <StackPanel Orientation="Horizontal"
                    Margin="20,5,0,5"
                    Visibility="{Binding Settings.DisableScrobbling, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="⚠"
                       Foreground="#FFA500"
                       FontSize="14"
                       Margin="0,0,8,0"
                       VerticalAlignment="Center"/>
            <TextBlock Text="{DynamicResource LOCGsPluginScrobblingDisabledWarning}"
                       Foreground="#FFA500"
                       FontSize="12"
                       FontStyle="Italic"
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"/>
        </StackPanel>

    </StackPanel>
</UserControl>
